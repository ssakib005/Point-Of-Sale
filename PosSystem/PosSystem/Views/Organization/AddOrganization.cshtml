@model List<PosSystem.Models.Setup.Organization>
@{
    ViewBag.Title = "Organization Setup";
}
<a onclick="PopupForm('@Url.Action("OpenOrganizationForm","Organization")')" class="btn" style="margin-bottom: 10px; background-color: #7d0505; border: 1px solid #a59e9e "><i class="fa fa-plus">Add Organization</i></a>

<div class="panel">
    <div class="panel-heading row" style="background-color: #bfbfbf">
        <div class="panel-title col-md-6" style="font-weight: bold; font-size: 20Px;color: black">Organization List</div>
    </div>
    <div class="panel-body" style="min-height: 40px; background-color: #323538">
        <table id="organizationDataTable" class="table table-striped table-responsive table-hover" style="background-color:burlywood; width: 100%; color: black">
            <thead>
                <tr>
                    <th style="color: black; margin: 5px;">Sl</th>
                    <th style="color: black ; margin: 5px;">Name</th>
                    <th style="color: black ; margin: 5px;">Code</th>
                    <th style="color: black ; margin: 5px;">Contact Number</th>
                    <th style="color: black ; margin: 5px;">Address</th>
                    <th style="color: black ; margin: 5px;">Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" />

@section scripts
{
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/CuScripts/Organization/CustomOrgScripts.js"></script>
}
