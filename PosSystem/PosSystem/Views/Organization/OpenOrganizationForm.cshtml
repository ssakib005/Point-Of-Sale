@model PosSystem.Models.Setup.Organization
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div style="background-color: black; min-height: 65vh;">
    @using(Html.BeginForm("OpenOrganizationForm", "Organization", FormMethod.Post, new { enctype = "multipart/form-data", id="form"}))
    {
        @Html.AntiForgeryToken()
        <br />
        <br />
        @Html.HiddenFor(m=>m.Id)
        <div class="form-group row" style="margin-left: 15px">
            @Html.LabelFor(m => m.Name, "Name", new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group row" style="margin-left: 15px">
            @Html.LabelFor(m => m.Code, "Code", new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Code, null, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group row" style="margin-left: 15px">
            @Html.LabelFor(m => m.ContactNumber, "Contact Number", new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.ContactNumber, null, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group row" style="margin-left: 15px">
            @Html.LabelFor(m => m.Image, "Image", new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                <input type='file' onchange="readURL(this);" id="img" name="img"/><br/>
                <img src="#" id="pic" alt="your image" />
            </div>
        </div>
        <div class="form-group row" style="margin-left: 15px">
            @Html.LabelFor(m => m.Address, "Address", new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", style="overflow: hidden", rows=3 })

            </div>
        </div>
        <hr />
        <div class="form-group" style="margin-left: 30px">

            <input type="button" value="Save" class="btn btn-success" onclick="formSave()"/>
            <input type="reset" value="Cancel" class="btn btn-danger" id="reset" />
        </div>
        <hr />
    }

</div>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/CuScripts/Organization/OrgForm.js"></script>



