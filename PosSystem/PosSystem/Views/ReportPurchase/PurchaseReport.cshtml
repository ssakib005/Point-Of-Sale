@model PosSystem.Models.Report.PurchaseReport
@{
    ViewBag.Title = "Purchase Report";
}

<div class="modal fade" id="purchaseModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 id="modalTitle" style="color: white; font-size: 30px;">Purchase Details</h4>
            </div>
            <div class="modal-body" id="purchaseModalBody">
                
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-9">
        <div class="panel">
            <div class="page-header" style="background-color: black; color: beige; font-weight: bold; padding: 10px;">
                <div class="panel-title">Search Result</div>
            </div>
            <div class="panel-body" style="min-height: 40vh">
                <table class="table table-striped table-hover" id="purchaseList">
                    <thead>
                        <tr>
                            <th style="color: black">SL</th>
                            <th style="color: black">Date</th>
                            <th style="color: black">Description</th>
                            <th style="color: black">Outlet</th>
                            <th style="color: black">Supplier</th>
                            <th style="color: black">Purchase Total</th>
                            <th style="color: black">Action</th>
                        </tr>
                    </thead>
                    <tbody id="purchaseTable"></tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel">
            <div class="page-header" style="background-color: black; color: beige; font-weight: bold; padding: 10px;">
                <div class="panel-title">Purchase Report</div>
            </div>
            <div class="panel-body">
                <div class="form-group row">
                    @Html.LabelFor(m => m.PurchaseCode, "Purchase Code: ", new { @class = "col-md-5 control-label", style = "color: black; padding-left: 20px;" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.PurchaseCode, null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.BName, "Branch: ", new { @class = "col-md-5 control-label", style = "color: black; padding-left: 20px;" })
                    <div class="col-md-7">
                        <select name="BName" id="loadBranch" class="form-control">
                            <option value="">---Select---</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.FromDate, "From Date: ", new { @class = "col-md-5 control-label", style = "color: black; padding-left: 20px;" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.FromDate, null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.ToDate, "To Date: ", new { @class = "col-md-5 control-label", style = "color: black; padding-left: 20px;" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.ToDate, null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-offset-6">
                        <input type="button" class="btn btn-default" value="Show All" onclick="showAll()" />
                        <input type="button" class="btn btn-default" value="Show" onclick="SearchFromBranch()"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" />

@section scripts
{
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>

    <script src="~/Scripts/CuScripts/ReportPurchase/ReportPurchase.js"></script>
}
