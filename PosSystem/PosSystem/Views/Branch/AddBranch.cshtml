@{
    ViewBag.Title = "Branch Setup";
}

<a onclick="PopupForm('@Url.Action("OpenBranchForm","Branch")')" class="btn btn-info" style="margin-bottom: 10px; background-color: #7d0505;border: 1px solid #a59e9e  "><i class="fa fa-plus">Add Branch</i></a>

<div class="panel">
    <div class="panel-heading row" style="background-color: #bfbfbf">
        <div class="panel-title col-md-6" style="font-weight: bold; font-size: 20Px;color: black">Branch List</div>
    </div>
    <div class="panel-body" style="min-height: 40px; background-color: #323538">
        <table id="branchDataTable" class="table table-striped table-responsive table-hover" style="background-color:burlywood; width: 100%; color: black">
            <thead>
                <tr>
                    <th style="color: black; margin: 5px;">Sl</th>
                    <th style="color: black ; margin: 5px">Name</th>
                    <th style="color: black ; margin: 5px;">Organization</th>
                    <th style="color: black ; margin: 5px;">Code</th>
                    <th style="color: black ; margin: 5px;">Contact</th>
                    <th style="color: black ; margin: 5px;">Address</th>
                    <th style="color: black ; margin: 5px;">Action</th>
                </tr>
            </thead>
        </table>
    </div>

</div>


<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" />

@section scripts
{
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/CuScripts/Branch/CustomBranch.js"></script>
}